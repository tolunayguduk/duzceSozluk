
@{
    ViewBag.Title = "Sign Up";
}

@section basliklar{
    @foreach (var baslik in ViewBag.basliklar)
    {
        <li class="nav-item">
            <a href="/timeLine/getEntry?id=@baslik.baslikID" class="nav-link">
                <i class="nav-icon fa fa-circle-o text-danger"></i>
                <p class="text">@baslik.baslik</p>
            </a>
        </li>
    }
}



        <div class="card card-primary" style="opacity: 0.8; filter: alpha(opacity=20);">
            <div class="card-header">
                <h3 class="card-title">Profil Oluştur</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            @using (Html.BeginForm("Index","signUp",FormMethod.Post,new { @enctype = "multipart/form-data" }))
            {
                <div class="card-body">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Adınız</label>
                        <input type="text" name="ad" class="form-control" id="exampleInputEmail1" placeholder="Adınız" required>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Soyadınız</label>
                        <input type="text" name="soyad" class="form-control" id="exampleInputEmail1" placeholder="Soyadınız" required>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Kullanıcı Adınız</label>
                        <input type="text" name="nick" class="form-control" id="exampleInputEmail1" placeholder="Kullanıcı Adınız" required>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email Adresiniz</label>
                        <input type="email" name="email" class="form-control" id="exampleInputEmail1" placeholder="Email Adresiniz" required>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Şifreniz</label>
                        <input type="password" name="sifre" class="form-control" id="exampleInputPassword1" placeholder="Şifreniz" required>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputFile">Profil Fotoğrafınız</label>
                        <div class="input-group">
                            <div class="custom-file">
                                <input type="file" name="fotograf" class="custom-file-input" id="exampleInputFile">
                                <label class="custom-file-label" for="exampleInputFile">Dosya Seçiniz</label>
                            </div>
                            <div class="input-group-append">
                                <span class="input-group-text" id="">Yükle</span>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Onayla</button>
                </div>
            }
        </div>
