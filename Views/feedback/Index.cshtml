
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section basliklar{


    @foreach (var baslik in ViewBag.basliklar)
    {
        <li class="nav-item">
            <a href="/timeLine/getEntry?id=@baslik.baslikID" class="nav-link">
                <i class="nav-icon fa fa-circle-o text-danger"></i>
                <p class="text">@baslik.baslik</p>
            </a>
        </li>
    }
}

        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Quick Example</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            @using (Html.BeginForm("Index","feedback"))
            {
            <div class="card-body">
                <div class="form-group">
                    <label for="exampleInputEmail1">Entry</label>
                    <input type="text" name="entryID" class="form-control" value="@ViewBag.entry.entryID" placeholder="@ViewBag.entry.icerik">
                </div>
                <div class="form-group">
                    <input type="hidden" name="kullaniciID" class="form-control" value="@ViewBag.kullanici.kullaniciID">
                </div>
                <div class="form-group">
                    <input type="hidden" name="durum" class="form-control" value="false">
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <textarea name="aciklama" class="form-control" rows="3" placeholder="Açıklama ..."></textarea>
                </div>

                <div class="form-group">
                    <label>Başlık Türü</label>
                    <select class="form-control" name="sikayetTurID">
                        @foreach (var tur in ViewBag.turler)
                        {
                            <option value="@tur.sikayetTurID">@tur.tur</option>
                        }
                    </select>
                </div>
            </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Gönder</button>
                </div>
            }
        </div>